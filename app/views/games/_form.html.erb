<% if game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from saving:</h2>

      <ul>
      <% game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<%= form_for game do |f|%>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :num_of_players, "Number of Players (minimum of 4)"  %>
    <%= f.number_field :num_of_players, min: 4  %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>