<h1><%= @game.name %> </h1>

<h2> <%= join_leave_link %> </h2>

<h3>Red Cards Left: <%=@game.teams.red.cards_left%> | Blue Cards Left: <%=@game.teams.blue.cards_left%></h3>
<div class="container">
  <div id="game">
    <table class="cards">
      <tbody>
        <tr>
          <% @game.board.spaces[0..4].each do |space|%>
            <td class="cell cell-inrevealed"><%= space.word.text  %></td>
          <% end %>
        </tr>
        <tr>
          <% @game.board.spaces[5..9].each do |space|%>
            <td class="cell cell-inrevealed"><%= space.word.text  %></td>
          <% end %>
        </tr>
        <tr>
          <% @game.board.spaces[10..14].each do |space|%>
            <td class="cell cell-inrevealed"><%= space.word.text  %></td>
          <% end %>
        </tr>
        <tr>
          <% @game.board.spaces[15..19].each do |space|%>
            <td class="cell cell-inrevealed"><%= space.word.text %></td>
          <% end %>
        </tr>
        <tr>
          <% @game.board.spaces[20..24].each do |space|%>
            <td class="cell cell-inrevealed"><%= space.word.text %></td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div>
  <h4>Red Team:</h4>
  <ul class="red">
    <% @game.teams.red.users.each do |u|%>
      <li><%= u.username %></li>
    <% end %>
  </ul>
  <h4>Blue Team:</h4>
  <ul class="blue">
    <% @game.teams.blue.users.each do |u|%>
      <li><%= u.username %></li>
    <% end %>
  </ul>
</div>
