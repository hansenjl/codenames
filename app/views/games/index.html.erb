<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>Game</th>
      <th>Players</th>
      <th>Creator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%=game.open_slots%>/<%= game.num_of_players %></td>
        <td><%= game.creator.username %></td>
        <td><%= game.active ? link_to('join', game_path(game)) : game.winner%></td>
        <td><%= link_to('edit', edit_game_path(game)) if game.creator == current_user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div>
  <%= link_to 'Create a New Game', new_game_path %>
</div>

<br>